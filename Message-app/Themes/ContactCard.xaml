<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ContactCard" TargetType="ListViewItem">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="#393B40"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Height="60"
                            Margin="5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,5">
                            <Image Source="{Binding ImageSource}" Width="40" Height="40" 
                                   Margin="0,0,10,0"
                                   Stretch="UniformToFill" 
                                   ClipToBounds="True"
                                   SnapsToDevicePixels="True"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Username}" 
                                           FontWeight="Bold" 
                                           FontSize="14" 
                                           Foreground="White"/>
                                <TextBlock Text="{Binding LastMessage}" 
                                           FontSize="12" 
                                           Foreground="Gray" 
                                           TextTrimming="CharacterEllipsis" 
                                           MaxWidth="130"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#292B2F"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
