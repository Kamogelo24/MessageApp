<Window x:Class="MessageApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="#36393F" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#252525" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock Text="Login to ChatApp" 
                               Foreground="White" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="15,0"/>
                    <Button x:Name="btnClose" 
                            Content="X" 
                            Width="25" 
                            Height="25"
                            HorizontalAlignment="Right"
                            Margin="0,0,10,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            Click="OnCloseClick"/>
                </Grid>
            </Border>

            <!-- Login Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Username" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" 
                         Height="35" 
                         Background="#40444B"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="10"/>

                <Button x:Name="btnLogin" 
                        Content="Connect" 
                        Height="35" 
                        Background="#7289DA"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,20,0,0"
                        Click="OnLoginClick"/>
            </StackPanel>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#2F3136" CornerRadius="0,0,10,10">
                <TextBlock x:Name="txtStatus" 
                           Text="Enter your username to connect" 
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>